Host github.com
    HostName github.com
    IdentityFile ~/.ssh/id_ed25519-github
    IdentitiesOnly yes
    UpdateHostKeys yes

Host gitlab.cern.ch
    HostName gitlab.cern.ch
    IdentityFile ~/.ssh/id_rsa-gitlab
    IdentitiesOnly yes

Host gitlab.engr.illinois.edu
    HostName gitlab.engr.illinois.edu
    IdentityFile ~/.ssh/id_rsa-illinois-gitlab
    IdentitiesOnly yes

Host chtc CHTC
    HostName submit1.chtc.wisc.edu
    Compression yes
    ForwardX11 yes
    ForwardX11Trusted yes
    IdentityFile ~/.ssh/id_ed25519-chtc
    IdentitiesOnly yes
    ForwardAgent yes
    User mfeickert

